<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="demo.SysUserMapper">
    <resultMap id="BaseResultMap" type="demo.SysUser">
        <!--@Table sys_user-->
        <id column="sys_id" jdbcType="INTEGER" property="sysId"/>
        <result column="sys_name" jdbcType="VARCHAR" property="sysName"/>
        <result column="sys_age" jdbcType="TINYINT" property="sysAge"/>
        <result column="sex_enum" jdbcType="VARCHAR" property="sexEnum"/>
        <result column="ext_json" jdbcType="OTHER" javaType="demo.UserInfo" property="extJson"
                typeHandler="com.baomidou.mybatisplus.extension.handlers.JacksonTypeHandler"/>
    </resultMap>
    <sql id="Base_Column_List">
        sys_id, sys_name, sys_age, sex_enum, ext_json
    </sql>
    <select id="selectBy" resultMap="BaseResultMap">
        select * from sys_user;
    </select>

    <update id="updateSysUser">
        update sys_user set sys_name= #{sysUser.sysName} where sys_id=#{sysUser.sysId};
    </update>


    <update id="updateSysUsers">
        update sys_user set sys_name= '测试11' where sys_id=1;
        update sys_user set sys_name= '测试22' where sys_id=2;
    </update>

</mapper>
